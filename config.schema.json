{
  "pluginAlias": "OverdaUranus",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": false,
        "default": "OverdaUranus"
      },
      "updateInterval": {
        "title": "Update Interval",
        "type": "number",
        "required": false,
        "default": 150,
        "minimum": 60,
        "maximum": 300
      },
      "sensors": {
        "title": "Uranus Sensors list",
        "type": "array",
        "required": true,
        "items": {
          "title": "Air Monitor Sensor",
          "type": "object",
          "properties": {
            "serialNumber": {
              "title": "Serial Number",
              "type": "string",
              "placeholder": "URN-000000",
              "required": true
            },
            "pass": {
              "title": "Sensor PIN",
              "type": "string",
              "placeholder": "0000",
              "min": 4,
              "max": 6,
              "required": true
            },
            "displayName": {
              "title": "Display Name",
              "type": "string",
              "required": false,
              "default": "Uranus"
            }
          }
        }
      }
    }
  }
}
