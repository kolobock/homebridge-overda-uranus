{
  "pluginAlias": "OverdaUranus",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": false,
        "default": "OverdaUranus"
      },
      "updateInterval": {
        "title": "Update Interval",
        "type": "number",
        "required": false,
        "default": 150,
        "min": 60,
        "max": 300
      },
      "sensors": {
        "title": "Uranus Sensors list",
        "type": "array",
        "required": true,
        "items": {
          "serialNumber": {
            "title": "Uranus Serial Number",
            "type": "string",
            "placeholder": "URN-000000",
            "required": true
          },
          "pass": {
            "title": "Uranus Sensor PIN",
            "type": "string",
            "placeholder": "0000",
            "min": 4,
            "max": 6,
            "required": true
          },
          "displayName": {
            "title": "Uranus Sensor Name",
            "type": "string",
            "required": false,
            "default": "Uranus"
          }
        }
      }
    }
  }
}
